//- ---- svg-icon mixin -----//
mixin icon(name,mod)
	- mod = mod || ''
	svg(class="icon icon-" + name + ' ' + mod)
		use(xlink:href="img/sprite.svg#" + name)
//- ---- end svg-icon mixin -----//

//- ---- color-svg-icon mixin -----//
mixin icon-color(name,mod)
	- mod = mod || ''
	svg(class="icon icon-" + name + ' ' + mod)
		use(xlink:href="img/sprite-color.svg#" + name)
//- ---- color-end svg-icon mixin -----//

//- ---- header -----//
mixin header
	header.header
//- ---- end header -----//

//- ---- footer -----//
mixin footer
	footer.footer
//- ---- end footer -----//

//- ---- title-with-bg-image -----//
mixin title(title, url, additionClass)
	.title(style="background-image: url('img/decor/" + url + "')" class=additionClass)=title
//- ----end title-with-bg-image -----//
